#!/usr/bin/env bash

# =========================================================================

main() {
	update-readme < .kubecli > README.md
}

# =========================================================================

update-readme() {
	extract-doc \
	| git-md-toc -cut
}

# =========================================================================

extract-doc() {
	sed -n '/^# [+][+][+]$/,/^# [-][-][-]$/ {
		/^# [+][+][+]$/d
		/^# [-][-][-]$/d
		s/^# \?//p
	}'
}

# =========================================================================

main "$@"

# =========================================================================

# EOF
